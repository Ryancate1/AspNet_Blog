<!DOCTYPE html>
<html>
<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Ryan Cate - Blog</title>         

        <!-- Bootstrap core CSS -->
        <link href="~/Assets/startbootstrap-clean-blog-gh-pages/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />

        <!-- Custom fonts for this template -->
        <link href="~/Assets/startbootstrap-clean-blog-gh-pages/vendor/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        
        <!-- Custom styles for this template -->
            <link href="~/Assets/startbootstrap-clean-blog-gh-pages/css/clean-blog.css" rel="stylesheet" />

        <!--Icon-->
        <link href="~/Assets/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="icon" href="~/Assets/Images/favicon.ico" type="image/x-icon" />
         
        @Styles.Render("~/Assets/css/")
        @Scripts.Render("~/Assets/js/") 

    </head>
  
<body>
        <!-- Navigation -->   
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a style="font-size:40px" class="navbar-brand" href="@Url.Action("Index", "Home")">RC</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fa fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li>
                            @using (Html.BeginForm("Index", "Posts", FormMethod.Post))
                            {
                                <div>
                                    <input type="text" class="form-control input-sm pull-right" name="searchStr" placeholder="Search" value="@ViewBag.Search" />
                                </div>
                            }
                        </li>
                        <li class="nav-item">     
                            <a href="@Url.Action("Index", "Home")">Home</a>
                        </li>  
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Posts")">My Post</a> 
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Contact", "Home")">Contact</a>  
                        </li>
                        <li class="nav-item"> 
                             @Html.Partial("_LoginPartial")   
                        </li>
                    </ul>
                </div>
            </div>       
        </nav> 
        <div class="container body-content" style="padding-top:130px">
            @RenderBody()  
        </div> 

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="https://www.linkedin.com/in/ryan-cate-3b915214a/" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://github.com/Ryancate1" target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-circle fa-stack-2x"></i>
                                    <i class="fa fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <p class="copyright text-muted">Copyright &copy; Ryan Cate 2017</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Assets/startbootstrap-clean-blog-gh-pages/vendor/jquery/jquery.js"></script>
    <script src="~/Assets/startbootstrap-clean-blog-gh-pages/vendor/popper/popper.js"></script>
    <script src="~/Assets/startbootstrap-clean-blog-gh-pages/vendor/bootstrap/js/bootstrap.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Assets/startbootstrap-clean-blog-gh-pages/js/clean-blog.min.js"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
